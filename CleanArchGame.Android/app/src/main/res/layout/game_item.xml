<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/top_bottom_barriers_shape"
        android:layout_margin="10dp"
>
    <TextView
            android:id="@+id/choose_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/game_start_icon"

            android:gravity="start"

            tools:text="Chess"
            android:textSize="27sp"
            app:layout_constraintHorizontal_bias="0.1"/>

    <ImageView
            android:id="@+id/game_start_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            app:layout_constraintTop_toTopOf="@id/choose_game_button"
            app:layout_constraintBottom_toBottomOf="@id/choose_game_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@android:drawable/ic_media_play"
    />

</androidx.constraintlayout.widget.ConstraintLayout>